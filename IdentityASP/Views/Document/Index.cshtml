@model IdentityASP.Models.ViewModel.DocumentViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Documents</h2>

<html>
<head>
    <title>Documents</title>
</head>
<body>

<!--#begin upload form-->
<div>@Html.Partial("~/Views/Document/_UploadDocument.cshtml")</div>
<!--#end upload form-->
    
<!--#begin product table-->           
    <div class="container">                  
        <table id="product-table" class="table">                            
            <thead>                                   
                <tr>      
                    <th>Name</th>
                    <th>Action</th>                    
                </tr>
            </thead>               
            <tbody>                    
                @foreach (var item in Model.DocumentList)
                {                        
                    <tr>              
                        <td>@item.DocumentName</td>           
                        <td>@Html.ActionLink("Download", "DownloadDocument", "Document", new { documentName = @item.DocumentName }, null)</td>                                               
                    </tr>
                }               
            </tbody>            
        </table>        
    </div>
<!--#end delivery table-->

</body>
</html>
