@model Entities.VM.DocumentViewModel
<!--#begin product table-->
<div class="container">
    <table id="product-table" class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DocumentList)
            {
                <tr>
                    <td>@item.DocumentName</td>
                    <td>@Html.ActionLink("Download", "DownloadDocument", "Document", new { documentName = @item.DocumentName }, null)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!--#end delivery table-->
