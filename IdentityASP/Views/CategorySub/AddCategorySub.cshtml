@model Entities.CategorySub
<!-- #begin add category sub modal -->
@using (Ajax.BeginForm("SaveCategorySub", "CategorySub", null, new AjaxOptions() { OnSuccess = "updateTableCategorySub" }, null))
{
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">New Category Sub</h4>
            </div>
            <div class="modal-body">
                <label>All fields are required</label>
                <div class="form-group">
                    <label for="categoryIdLabel" class="hidden">Category Id</label>
                    @Html.HiddenFor(m => m.CategoryId, new { @class = "form-control input-sm", id = "categoryId", name = "category-id" })
                </div>
                <div class="form-group">
                    <label for="categorySubIdLabel" class="hidden">Category Sub Id</label>
                    @Html.HiddenFor(m => m.Id, new { @class = "form-control input-sm", id = "categorySubId", name = "categorySub-id" })
                </div>
                <div class="form-group">
                    <label for="descriptionSubLabel">Description</label>
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control input-sm", id = "description", name = "description", required = "required", autocomplete = "off", autofocus = "True" })
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn-saveSub btn btn-default" value="Save">Save</button>
                    <button type="button" class="btn-cancelSub btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
<!-- #end add category sub modal -->
